<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>


<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Label fx:id="label" text="Text goes here" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="field" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Button text="Okay" GridPane.rowIndex="2" GridPane.columnIndex="0" onAction="#switchText"/>
    <Button text="Cancel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

</GridPane>